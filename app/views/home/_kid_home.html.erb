
<%= @a %>
<div class="rounded-lg bg-gray-100 shadow px-4 py-4">
	<h1 class="text-xl">המשימות שלי</h1>
	<% @my_tasks.each do |task| %>
		<%= render "task", { task: task, status: "in_progress", kid: current_user.id } %>
	<% end %>
</div>
<br>
<%= @group_score %>
<div class="rounded-lg bg-gray-100 shadow px-4 py-4">
	<h1 class="text-xl">משימות תנועתיות</h1>
	<% @random_tasks.each do |task| %>
		<%= render "task", { task: task, status: "random", kid: current_user.id } %>
	<% end %>
</div>
<br>
<div class="rounded-lg bg-gray-100 shadow px-4 py-4">
	<h1 class="text-xl">משימות שסיימתי</h1>
	<div class="w-full py-1 shadow my-2 rounded-lg  bg-gray-200 text-gray-700">
		<div class="w-full flex justify-between">
			<span class="mx-3 text-lg aw-1/3 line-through">משימה לא אמיתית</span>
			<span class="mx-3 w-1/3 flex justify-end"><i class="gg-time"></i></span>
		</div>
		<span class="mx-3 aw-1/3">2 נקודות</span>
	</div>
	<div class="w-full py-1 shadow my-2 rounded-lg  bg-gray-200 text-gray-700">
		<div class="w-full flex justify-between">
			<span class="mx-3 text-lg aw-1/3 line-through">משימה לא אמיתית</span>
			<!-- <span class="mx-3 w-1/3 flex justify-end"><i class="gg-check-o"></i></span> -->
		</div>
		<span class="mx-3 aw-1/3">2 נקודות</span>
	</div>
	<% @done_tasks.each do |task| %>
		<%= render "task", { task: task, status: "done", kid: current_user.id } %>
	<% end %>
	<% @approved_tasks.each do |task| %>
		<%= render "task", { task: task, status: "approved", kid: current_user.id } %>
	<% end %>
</div>
