<% @groups.each do |group|%>
	<div class="flex justify-between mb-5">
		<h1 class="text-2xl"><%= group.name %></h1>
		<h1 class="text-2xl ml-32"><%= group.score %></h1>
	</div>
<h1 class="text-xl">משימות לאישור</h1>
<div class="rounded-lg bg-gray-100 shadow px-4 py-4">
	<div class="w-full py-1 shadow my-2 rounded-lg bg-blue-100">
		<div class="w-full flex justify-between">
			<span class="mx-3 text-lg aw-1/3">משימה לא אמיתית</span>
			<span class="mx-3 w-1/3 flex justify-end"><i class="gg-check-o"></i></span>
		</div>
		<span class="mx-3 aw-1/3">יוסי כהן</span>
	</div>

	<% @tasks_to_approve.each do |task| %>
		<%= render "task", { task: task, status: "to_approve"} %>
	<% end %>
</div>
<button class="toggle-modal bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-5">
	הוספת משימה
</button>
<div class="rounded-lg bg-gray-100 shadow px-4 py-4">
	<% group.kids do |kid| %>
		<div class="container w-full py-1 shadow my-2 rounded-lg bg-blue-100">
			<div class="w-full flex justify-between">
				<span class="name mx-3 text-lg"><%= kid.name %></span>
				<span class="mx-3 aw-1/3"><%= kid.score %> נקודות</span>
			</div>
		</div>
	<% end %>
	<div class="container w-full py-1 shadow my-2 rounded-lg bg-blue-100">
		<div class="w-full flex justify-between">
			<span class="name mx-3 text-lg">יוסי כהן</span>
			<span class="mx-3 aw-1/3">20 נקודות</span>
		</div>
	</div>
</div>
<% end %>

<div class="modal-bg hidden w-screen h-screen absolute bg-gray-900 top-0 left-0">
	<div class=" bg-gray-100">
		<div class="flex justify-between">
			<h1 class="text-xl m-3">משימות תנועתיות</h1>
			<i class="gg-close-o m-3 toggle-modal"></i>
		</div>
		<div class="rounded-lg shadow px-4 py-4">
			<% @general_tasks.each do |task| %>
			<%= render "task", { task: task, status: "general"} %>
			<% end %>
			<button class="open-modal bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
				<%= link_to "משימה חדשה", new_task_path %>
			</button>
		</div>
	</div>
</div>


<script type="text/javascript">
$(document).ready(function() {
	$(".toggle-modal").click(function(event) {
		$(".modal-bg").toggle()
	});
	$(".open-description").click(function(event) {
		$(this).parents(".container").children('.description').toggle()
	});
});

</script>
